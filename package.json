{
  "name": "agentrem",
  "version": "1.6.0",
  "description": "Structured reminders CLI for AI agents with MCP server",
  "type": "module",
  "main": "dist/api.js",
  "types": "dist/api.d.ts",
  "exports": {
    ".": "./dist/api.js",
    "./mcp": "./dist/mcp/server.js"
  },
  "bin": {
    "agentrem": "dist/index.js",
    "agentrem-mcp": "dist/mcp/server.js"
  },
  "files": [
    "dist",
    "llms.txt",
    "llms-full.txt",
    "README.md",
    "LICENSE",
    "assets"
  ],
  "scripts": {
    "build": "tsc",
    "postbuild": "chmod +x dist/index.js dist/mcp/server.js",
    "build:notify": "bash scripts/build-notify.sh",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "start": "node dist/index.js",
    "mcp": "node dist/mcp/server.js",
    "prepublishOnly": "npm run build && npm test"
  },
  "keywords": [
    "reminders",
    "ai-agent",
    "cli",
    "mcp",
    "mcp-server",
    "sqlite",
    "llm",
    "llm-tools",
    "ai-tools",
    "agent-tools",
    "agent-memory",
    "persistent-memory",
    "model-context-protocol",
    "claude",
    "claude-code",
    "claude-desktop",
    "cursor",
    "windsurf",
    "openai",
    "anthropic",
    "coding-agent",
    "vibe-coding"
  ],
  "author": "Dushyant Garg",
  "repository": {
    "type": "git",
    "url": "https://github.com/fraction12/agentrem.git"
  },
  "homepage": "https://fraction12.github.io/agentrem",
  "license": "MIT",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.1",
    "better-sqlite3": "^11.8.2",
    "commander": "^13.1.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^22.13.4",
    "typescript": "^5.7.3",
    "vitest": "^3.0.6"
  }
}
